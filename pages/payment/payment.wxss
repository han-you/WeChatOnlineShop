/* pages/payment/payment.wxss */
.goods-wrap{
  height:100%;
}
.title-wrap{
  height:80rpx;
  line-height: 80rpx;
  font-size: 40rpx;
  border-bottom:1rpx solid red;
}
.goods{
  margin-top: 2rpx;
  display: flex;
}
.goods image{
  flex:1;
}
.message{
  flex:3;
}
.price_num{
  padding-left: 10rpx;
  align-items: center;
  height: 40%;
  display: flex;
  width:100%;
}
.good_name{
  height: 60%;
  width: 100%;
  padding-top: 20rpx;
  padding-left: 10rpx;
}
.price{
  flex: 5;
  font-size:40rpx;
  color:red
}
.num{
  text-align: right;
  padding-right:30rpx;
}
.num{
  flex:5
}
.foot-bar{
  border-top: 1rpx solid #ccc;
  position: fixed;
  bottom: 0;
  left:0;
  width:100%;
  height:90rpx;
  display: flex;
}
.total-price-wrap{
  flex:5;
  display: flex;
  align-items: center;
  padding-left: 10rpx;
}
.total-price-wrap .price{
  font-weight: 900;
  font-size: 45rpx;
}
.order-pay-wrap{
  flex:2;
  justify-content: center;
  align-items: center;
  background-color: #e0434e;
  display: flex;
}